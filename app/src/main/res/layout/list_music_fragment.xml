<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.list.ListMusicFragment">

    <data>
        <variable
            name="listMusicViewModel"
            type="com.example.android.musicapplicationv2.ui.list.ListMusicViewModel" />
    </data>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:theme="@style/GeneralStyle"
        android:orientation="vertical"
        android:paddingBottom="100dp"
        android:paddingTop="15dp"
        android:background="@color/colorPrimaryLight">
            <ListView
            android:id="@+id/song_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            tools:listitem="@layout/song_templ"/>
    </LinearLayout>
</layout>
